---
export interface Props {
	title: string;
	image: string;
}

const { title, image } = Astro.props;
---

<li class="flex flex-col align-center items-center rounded bg-white p-4 shadow-md">
	<img width="206" height="206" class="p-3" src={image} alt={title} />
	<p class="symbol-title break-words text-center">
		{title}
	</p>
</li>
