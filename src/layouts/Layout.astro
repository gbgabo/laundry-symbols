---
import "@fontsource-variable/gabarito";
import Filter from "~/components/Filter.astro";

export interface Props {
	title?: string;
	description?: string;
}

const categories = [
	{ name: 'washing', img: "/img/symbols/washing/wash.svg" },
	{ name: 'bleaching', img:"/img/symbols/bleaching/bleach.svg" },
	{ name: 'drying', img:"/img/symbols/drying/dry.svg" },
	{ name: 'ironing', img:"/img/symbols/ironing/iron.svg" },
	{ name: 'professional', img:"/img/symbols/professional/professional.svg" }
]

const { title = "title", description = "description"} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth bg-cyan-50">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta name="og:image" content="/img/og_image.png"/>
		<title>{title}</title>
		<meta name="description" content={description} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
	</head>
	<div class="grid grid-cols-main">
		<div class="col-start-2 col-end-3 flex flex-col items-center justify-center 
					lg:col-start-1 lg:col-end-2 lg:h-screen lg:sticky lg:top-0">
			<div class="bg-cyan-100 rounded-b-xl drop-shadow-md mb-5
						lg:my-auto lg:mr-6 lg:rounded-r-2xl lg:pt-0 lg:max-w-sm">
				<h1 class="text-xl font-bold p-4 text-center tracking-wider">
					laundry-symbols
				</h1>
				<p class="px-6">
					{description}
				</p>
				<Filter/>
			</div>
		</div>	
		<body>
			<div class="col-start-2 col-end-3">
				<div class="sticky top-3 w-full z-10 px-4">
					<slot name="top-bar"/>
				</div>
				<slot />
				<footer class='flex flex-col items-center mb-24 gap-2'>
					<slot name="footer"/>
				</footer>
			</div>
		</body>
		<header class="col-start-3 col-end-4 fixed bottom-0 flex w-full lg:h-screen lg:sticky lg:top-0">
			<nav class="m-auto w-fit rounded-t-xl bg-cyan-100 p-3 drop-shadow-lg lg:rounded-full">
				<ul class="grid grid-cols-5 gap-4 lg:grid-cols-1 lg:grid-rows-5">
					{
						categories.map(({name, img}) => (<li>
						<a href={`#${name}`}>
							<img
								width="48"
								height="48"
								src={img}
								class="w-12"
								alt={`${name} symbol`}
							/>
						</a>
					</li>))
					}
				</ul>
			</nav>
		</header>
	</div>

	<style is:inline is:global>
		body {
			font-family: "Gabarito Variable";
		}
	</style>
</html>
